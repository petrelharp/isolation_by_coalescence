  month = apr,
  number = 4,
  pages = {1433-1445},
  pmid = {22234858},
  timestamp = {2015-05-08T08:18:42.000+0200},
  title = {Gene genealogies within a fixed pedigree, and the robustness of {Kingman}'s coalescent},
  url = {http://www.ncbi.nlm.nih.gov/pubmed/22234858},
  volume = 190,
