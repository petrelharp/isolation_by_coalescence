  journal = {Ecol Evol},
  keywords = {load local_adaptation migration migration_load population_genetics spatial_structure two_patch_model},
  month = nov,
  number = 14,
  pages = {4722-4735},
  pmid = {24363900},
  timestamp = {2014-10-17T20:51:25.000+0200},
