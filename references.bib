  issn = {14691809},
  journal = {Annals of Human Genetics},
  keywords = {deleterious_alleles recessive_alleles spatial_correlation spatial_structure stepping_stone_models},
  number = 3,
  pages = {251--260},
  publisher = {Blackwell Publishing Ltd},
  timestamp = {2010-09-02T18:12:19.000+0200},
