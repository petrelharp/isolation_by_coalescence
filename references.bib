  intrahash = {1c7097ed02515f4f5408d6334cefa322},
  issn = {12861358},
  keywords = {Wright-Fisher_diffusion coalescent_theory duality spatial_coalescent spatial_structure},
  timestamp = {2015-06-15T03:41:19.000+0200},
  title = {Representation Theorems for Interacting Moran Models, Interacting {Fisher-Wright} Diffusions and Applications},
