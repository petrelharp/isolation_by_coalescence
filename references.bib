  author = {Mikaberidze, Alexey and Mundt, Christopher C. and Bonhoeffer, Sebastian},
  biburl = {http://www.bibsonomy.org/bibtex/29c9dd2a900e4e6dda9fae22e3ba0e90a/peter.ralph},
  interhash = {d188382c1fda6921e9ec9cb64d96e6a2},
  intrahash = {9c9dd2a900e4e6dda9fae22e3ba0e90a},
  keywords = {dispersal dispersal_kernel evolution_of_dispersal pathogen_spread spatial_scale spatial_structure},
  note = {cite arxiv:1410.0587},
  timestamp = {2014-10-13T19:43:03.000+0200},
  title = {The effect of spatial scales on the reproductive fitness of plant
  pathogens},
