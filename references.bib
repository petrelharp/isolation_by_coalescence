  interhash = {69ceda3f5f22bb9c31f14ba2f5a3acb7},
  intrahash = {3a648dfa748bd7c27455fc74c7c75c86},
  journal = {Molecular Ecology},
  keywords = {demography dispersal_estimation review},
  pages = {1-35},
  timestamp = {2018-09-27T17:50:07.000+0200},
