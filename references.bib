  interhash = {0fbed09001e625980d0a764c059de1c1},
  intrahash = {566f62ab94cd9cb491d9fb94dd45e737},
  journal = {Genetics},
  keywords = {discrete_populations hitchhiking linkage population_genetics selection spatial_structure},
  month = sep,
  number = 1,
  pages = {213-226},
  pmid = {21705748},
  timestamp = {2014-12-17T22:29:38.000+0100},
