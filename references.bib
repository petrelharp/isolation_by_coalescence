  journal = {Theoretical Population Biology },
  keywords = {metapopulation persistence population_structure probability recurrence source-sink_dynamics spatial_structure},
  number = 0,
  pages = {31 - 46},
  timestamp = {2013-09-11T00:54:33.000+0200},
  title = {New approaches to source–sink metapopulations decoupling demography and dispersal },
