  intrahash = {5e29c30b4ea253da931f10095607d6ee},
  journal = {Genetics},
  keywords = {hitchhiking selection spatial_structure},
  month = jun,
  timestamp = {2011-07-11T19:11:40.000+0200},
  title = {Hitchhiking Effect of a Beneficial Mutation Spreading in a Subdivided Population
