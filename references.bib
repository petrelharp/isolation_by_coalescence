  intrahash = {fd2fe16b08504ea0cccfeb7624bd416e},
  journal = {bioRxiv},
  keywords = {Fisher-KPP Poisson-Voronoi Poisson_process myown parallel_adaptation spatial_structure standing_variation wave_of_advance},
