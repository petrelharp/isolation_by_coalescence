  interhash = {eeed5a00b07011faa819ba8e06ae80de},
  intrahash = {2cd608e925550c4f1e43458c4ae77af1},
  keywords = {F_ST F_statistics methods population_genomics scans_for_selection spatial_structure local_adaptation},
  note = {cite arxiv:1402.4348},
  timestamp = {2014-06-29T22:01:42.000+0200},
  title = {Hierarchical {Bayesian} model of population structure reveals convergent
  adaptation to high altitude in human populations},
